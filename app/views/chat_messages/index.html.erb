<p id="notice"><%= notice %></p>

<h1>Chat Messages</h1>

<table>
  <thead>
    <tr>
      <th>Chat room</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chat_messages.each do |chat_message| %>
      <tr>
        <td><%= chat_message.chat_room_id %></td>
        <td><%= chat_message.message %></td>
        <td><%#= link_to 'Show', chat_message %></td>
        <td><%#= link_to 'Edit', edit_chat_message_path(chat_message) %></td>
        <td><%#= link_to 'Destroy', chat_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.present? %>
<%= link_to 'New Chat Message', new_chat_message_path(user_id: current_user,chat_room_id: @chat_room.id) %>
<% elsif current_super_admin.present? %>
<%= link_to 'New Chat Message', new_chat_message_path(admin_user_id: current_super_admin,chat_room_id: @chat_room.id) %>
<% end %>
